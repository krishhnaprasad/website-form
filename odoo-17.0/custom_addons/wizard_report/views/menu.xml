<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_appointment_report_form" model="ir.ui.view">
            <field name="name">appointment report.form</field>
            <field name="model">report.wizard</field>
            <field name="arch" type="xml">
                <form string="patient form">
                    <sheet>
                        <group>
                            <field name="patient_id"/>
                            <field name="date_from"/>
                            <field name="date_to"/>>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="view_appointment_report_tree">
            <field name="name">appointment report List</field>
            <field name="model">report.wizard</field>
            <field name="arch" type="xml">
                <tree string="tag">
                    <field name="patient_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </tree>
            </field>
        </record>


        <record id="action_appointment_report" model="ir.actions.act_window">
            <field name="name">appointment report Details</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">report.wizard</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new record!
                </p>
            </field>
        </record>

        <menuitem id="appointment_wizard_action" name="Appointment" action="action_appointment_report"/>

        <menuitem id="appointment_patient_report_wiz"
                  name="appointment"
                  parent="appointment_wizard_action"
                  action="appointment_report_wiz"/>
    </data>
</odoo>


