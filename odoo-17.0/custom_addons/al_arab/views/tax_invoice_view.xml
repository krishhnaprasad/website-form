<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_area_res_partner" model="ir.ui.view">
        <field name="name">area.res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="area">Area</field>
            </xpath>
        </field>
    </record>
    <record id="view_res_company" model="ir.ui.view">
        <field name="name">view.res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="trn">Tax Registration Number</field>
            </xpath>
        </field>
    </record>
    <record id="view_delivery_charge" model="ir.ui.view">
        <field name="name">view.delivery.charge.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='narration']"
                   position="after">
                <field name="delivery_charge"/>
            </xpath>
        </field>
    </record>
</odoo>

